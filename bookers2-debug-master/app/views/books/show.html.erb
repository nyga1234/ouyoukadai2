<% if @book.errors.any? %>
    <h3>There is an error in the entered content<%= @book.errors.count %>There are cases</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
     <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@book_find.user) do %>
            <%= attachment_image_tag(@book_find.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @book_find.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book_find.title, book_path(@book_find) %></td>
          <td><%= @book_find.body %></td>
          <% if current_user.id == @book_find.user_id %>
          <td><%= link_to 'Edit', edit_book_path(@book_find), class: "btn btn-sm btn-success edit_book_#{@book_find.id}" %></td>
          <td><%= link_to 'Destroy', book_path(@book_find), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% else %>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>